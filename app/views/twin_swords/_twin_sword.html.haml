.panel.panel-default
  .panel-heading
    = twin_sword.name
  .panel-body
    %table.table
      %tr
        %th 攻撃力
        %th 火
        %th 雷
        %th 会心率
      %tr
        %td 89
        %td 89
        %td 89
        %td 89

    #sharpness
      .heading
        切れ味
      .body
        .progress
          = render partial: "sharpness_guage/sword", object: twin_sword
  .panel-body
    - if twin_sword.recipe_derived_from.nil?
      派生元がありません
    - else
      %h4 #{link_to_twin_sword(twin_sword.derived_from)}からの強化素材
      - twin_sword.recipe_derived_from.items.each do |requirement|
        .panel.panel-default
          .panel-heading
            = requirement.name
            %span.badge= requirement.quantity
          / .panel-collapse.collapse.in
          /   .panel-body
          /     上位リオレウス剥ぎ取り 5%
  .panel-body
    - twin_sword.recipes_deriving_to.each do |recipe|
      %h4 #{link_to_twin_sword(recipe.to)}への強化素材
      - recipe.items.each do |requirement|
        .panel.panel-default
          .panel-heading
            = requirement.name
            %span.badge= requirement.quantity
