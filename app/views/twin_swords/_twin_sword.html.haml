.panel.panel-default
  .panel-heading
    = twin_sword.name
  .panel-body
    .btn-group-vertical
      - if twin_sword.derived_from
        = link_to_twin_sword twin_sword.derived_from, class: "btn btn-default"
      - else
        = link_to "nil", "#", class: "btn btn-default"

  .panel-body
    #sharpness
      .heading
        切れ味
      .body
        .progress
          = render partial: "sharpness_guage/sword", object: twin_sword
  .panel-body
    .btn-group-vertical
      - if twin_sword.deriving_to.any?
        - twin_sword.deriving_to.each do |weapon|
          = link_to_twin_sword weapon, class: "btn btn-default"
      - else
        = link_to "nil", "#", class: "btn btn-default"
